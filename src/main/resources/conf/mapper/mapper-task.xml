<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.crawler.dao.TaskDao">
    <!-- 公用字段 -->
    <resultMap id="baseMap" type="Task">
        <id property="id" column="id"/>
        <result property="createTime"   column="create_time"/>
        <result property="modifyTime"   column="modify_time"/>
        <result property="status"   column="status"/>
    </resultMap>

    <resultMap id="elementResultMap" type="Task" extends="baseMap">
        <result property="href"   column="href"/>
        <result property="source"   column="source"/>
        <result property="domain"   column="domain"/>
        <result property="weight"   column="weight"/>
        <result property="deep"   column="deep"/>
    </resultMap>

    <sql id="selectBlock">
        c.id AS id,
        c.href AS href,
        c.source AS source,
        c.domain AS domain,
        c.create_time AS createTime,
        c.modify_time AS modifyTime,
        c.weight AS weight,
        c.deep AS deep,
        c.status AS status
    </sql>

    <update id="update">
        update task set ${column} = #{value} where id = #{id}
    </update>

